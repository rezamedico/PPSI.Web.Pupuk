@model MsAktor
@{
}

<section class="content-header">
    <h1>
        Tambah Produsen
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Master/Produsen/Index"><i class="fa fa-dashboard"></i> Produsen</a></li>
        <li><a href="#">Tambah Produsen</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <form id="add_produsen" action="/Master/Produsen/CreateProdusen" method="post" enctype="multipart/form-data">
                <div class="box box-primary">
                    <div class="box-header with-border">
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label>Kode:</label>
                                    <input type="hidden" name="IsCreate" value="1" />
                                    <input type="text" asp-for="Kode" id="Kode" class="form-control" readonly="readonly">
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label>Nama:</label>
                                        <input type="text" id="Nama" asp-for="Nama" class="form-control" placeholder="Nama">
                                    </div>
                                    <div class="col-md-4">
                                        <label>Provinsi:</label>
                                        <select id="RefProvinsiId" asp-for="ProvinsiId" asp-items="ViewBag.ddProvinsi" class="form-control selectpicker" style="width: 100%;">
                                            <option selected value="@null">--Pilih Provinsi--</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="row">
                            <div class="form-group">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label>Kabupaten/Kota:</label>
                                        <select id="RefKabupatenId" asp-for="KabupatenId" asp-items="ViewBag.ddKota" class="form-control selectpicker" style="width: 100%;">
                                            <option selected value="@null">--Pilih Kabupaten/Kota--</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label>Kecamatan:</label>
                                        <select id="RefKecamatanId" asp-for="KecamatanId" asp-items="ViewBag.ddKecamatan" class="form-control selectpicker" style="width: 100%;">
                                            <option selected value="@null">--Pilih Kecamatan--</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label>Kode Pos:</label>
                                        <input type="text" id="KodePos" asp-for="KodePos" class="form-control" placeholder="KodePos">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="row">
                            <div class="form-group">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label>Nomor Handphone:</label>
                                        <input type="text" id="NomorHandphone" asp-for="NomorHandphone" class="form-control" placeholder="NomorHandphone">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label>Email:</label>
                                        <input type="text" id="Email" asp-for="Email" class="form-control" placeholder="Email">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label>Alamat:</label>
                                        <div class="form-group">
                                            <textarea asp-for="Alamat" class="form-control" rows="3" placeholder="Alamat"></textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button id="btnAddProdusen" type="submit" class="btn btn-primary">Simpan</button>
                        &nbsp;
                        <a class="btn btn-danger" href="/Master/Produsen/Index">
                            <span class="glyphicon glyphicon-remove-circle"></span> Kembali
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {

    }); // end document.ready

    $(document).on('keyup', '#NomorHandphone', function () {
        this.value = this.value.replace(/[^0-9]/g, "");
    });

    $('#btnAddProdusen').click(function (e)
    {
        var url = $('#add_produsen').attr('action');
        var form = $('#add_produsen').serializeArray();
        e.preventDefault();
            $.ajax({
                type: "POST",
                url: url,
                data: form,
                cache: false,
                dataType: "json",
                success: function (callback) {
                    if (callback.data != null)
                    {
                        $.notify({
                            // options
                            icon: 'glyphicon glyphicon-ok',
                            title: 'Success!',
                            message: callback.message
                        }, {
                                // settings
                                type: 'success',
                                delay: 3000
                            });
                        window.location.href = "/Master/Produsen/";
                    }
                    else
                    {
                        $.notify({
                            // options
                            icon: 'glyphicon glyphicon-remove',
                            title: 'Failed!',
                            message: callback.message
                        }, {
                                // settings
                                type: 'danger',
                                delay: 3000
                            });
                    }
                },
                error: function (callback) {
                    $.notify({
                        // options
                        icon: 'glyphicon glyphicon-remove',
                        title: 'Failed!',
                        message: 'Ajax Error'
                    }, {
                            // settings
                            type: 'danger',
                            delay: 3000
                        });
                }
        });

    });

    $(document).on('change', '#RefProvinsiId', function () {
        var provinsiId = $(this).val();
        console.log(provinsiId);
        var _url = '/Master/Petani/GetKotaByProvinsiId';
        $.ajax({
            type: 'POST',
            async: false,
            url: _url,
            cache: false,
            data: { 'provinsiId': provinsiId },
            traditional: true,
            success: function (result) {
                console.log(result);
                var temp = '<option value>-- Pilih Kabupaten --</option>'
                $(result.ddKota).each(function () {
                    temp = temp + '<option value="' + this.refKotaId + '">' + this.nama + '</option>'
                })
                $('#RefKabupatenId').html(temp);//.selectpicker('refresh').trigger('change');
            },
            error: function (result) {
                //Notify('Sorry, There was an error!', 'bottom-right', '5000', 'red', 'fa-warning', true);
            }
        });
    });

    $(document).on('change', '#RefKabupatenId', function () {
        var kotaId = $(this).val();
        console.log(kotaId);
        var _url = '/Master/Petani/GetKecamatanByKabupatenId';
        $.ajax({
            type: 'POST',
            async: false,
            url: _url,
            cache: false,
            data: { 'kotaId': kotaId },
            traditional: true,
            success: function (result) {
                console.log(result);
                var temp = '<option value>-- Pilih Kecamatan --</option>'
                $(result.ddKecamatan).each(function () {
                    temp = temp + '<option value="' + this.refAreaId + '">' + this.namaArea + '</option>'
                })
                $('#RefKecamatanId').html(temp);
            },
            error: function (result) {
                //Notify('Sorry, There was an error!', 'bottom-right', '5000', 'red', 'fa-warning', true);
            }
        });
    });

</script>