@{ 
    Layout = "_LayoutLogin";
}

<!-- Content
============================================= -->
<section id="content">

    <div class="content-wrap nopadding">

        <div class="section nopadding nomargin" style="width: 100%; height: 100%; position: absolute; left: 0; top: 0; background: url('/images/FarmingBackground.jpg') center center no-repeat; background-size: cover;"></div>

        <div class="section nobg full-screen nopadding nomargin">
            <div class="container vertical-middle divcenter clearfix">

                <div class="panel panel-default divcenter noradius noborder" height="300" style="max-width: 350px; background-color: rgba(255,255,255,0.93);">
                    <div class="panel-body" style="padding: 40px;">

                        <div class="row center">
                            <a href="#"><img src="~/images/puspa.png" alt="Canvas Logo" height="100" align="top"></a>
                        </div>
                        <form id="login-form" name="login-form" class="nobottommargin" action="/Login/Login" method="post">

                            <div class="col_full">
                                <label>Username:</label>
                                <input type="text" id="login-form-username" name="username" value="" class="form-control not-dark" />
                            </div>

                            <div class="col_full">
                                <label>Password:</label>
                                <input type="password" id="login-form-password" name="password" value="" class="form-control not-dark" />
                            </div>

                            <div class="col_full nobottommargin">
                                <button class="button button-3d button-green nomargin" id="login-form-submit" type="submit">Login</button>                                
                            </div>
                        </form>

                    </div>
                </div>

                <div class="row center dark"><small style="color:black;">Copyrights &copy; @DateTime.Now.Year PUSPA</small></div>

            </div>
        </div>

    </div>

</section>
<!-- #content end -->
<!-- Go To Top
============================================= -->
<div id="gotoTop" class="icon-angle-up"></div>